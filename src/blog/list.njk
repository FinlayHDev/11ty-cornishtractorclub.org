  <div class="section">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-3 col-6">
          <h4 class="text-white mb-5">Quick Links</h4>
          <ul class="list-unstyled">
            <li><a href="{{ relativePath }}index.html" class="text-light d-block mb-3">Home</a></li>
            <li><a href="{{ relativePath }}#about" class="text-light d-block mb-3">About</a></li>
            <li><a href="{{ relativePath }}events.html" class="text-light d-block mb-3">Events</a></li>
            <li><a href="{{ relativePath }}contacts.html" class="text-light d-block mb-3">Contacts</a></li>
          </ul>
        </div>
        <div class="col-md-3 col-6">
