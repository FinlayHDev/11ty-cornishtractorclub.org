  <!-- Main Stylesheet -->
  <link href="{{ relativePath }}css/style.css" rel="stylesheet">

  <!--Favicon-->
  <link rel="shortcut icon" href="{{ relativePath }}images/cornish-tractor-club.png" type="image/x-icon">
  <link rel="icon" href="{{ relativePath }}images/cornish-tractor-club.png" type="image/x-icon">

</head>

<body>


  <header class="navigation fixed-top bg-transparent">
    <nav class="navbar navbar-expand-lg navbar-dark">
      <a class="navbar-brand" href="{{ relativePath }}index.html"><img src="{{ relativePath }}images/cornish-tractor-club.png" alt="CTC-Logo" height="80"></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation"
        aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse text-center" id="navigation">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="{{ relativePath }}index.html">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ relativePath }}index.html#about">About</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ relativePath }}events.html">Events</a>
          <li class="nav-item active">
            <a class="nav-link" href="{{ relativePath }}blog.html">Blog</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ relativePath }}gallery.html">Gallery</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Forms</a>
            <div class="dropdown-menu dropdown-menu-external">
              <a class="dropdown-item" href="{{ rallyForm.upload_exhibitor }}">Rally - Exhibitor</a>
              <a class="dropdown-item" href="{{ upload_craft }}">Rally - Craft</a>
              <a class="dropdown-item" href="{{ rallyForm.upload_trade }}">Rally - Trade</a>
              <a class="dropdown-item" href="{{ rallyForm.upload_model }}">Rally - Model</a>
              <a class="dropdown-item" href="{{ rallyForm.upload_termsandconditions }}">Rally - T&Cs</a>
            </div>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ relativePath }}contacts.html">Contacts</a>
          </li>
        </ul>
      </div>
    </nav>
  </header>

<!-- page-title -->
<section class="page-title bg-cover background-overlay" data-background="{{ relativePath }}images/backgrounds/blog.jpg">
  <div class="container">
    <div class="row">
      <div class="col-12 text-center">
        <h1 class="display-1 text-white font-weight-bold font-primary">Blog</h1>
      </div>
    </div>
  </div>
</section>
<!-- /page-title -->


<!-- blog -->
<section class="section">
  <div class="container">
    <div class="row justify-content-center align-items-center">
      {# articles #}
      {% for item in pagination.items | reverse %}
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
          <article class="card">
            <div>
              <img class="img-fluid mb-3 rounded" src="https://panel.cornishtractorclub.org{{ item.cover_image_URL }}" alt="Article Image - Path: {{ item.cover_image_URL }}" />
              <a class="h4 card-title my-3 text-dark hover-text-underline" href="/blog/{{ item.slug }}">{{ item.title }}</a>
              <h5 class="font-weight-normal">{{ item.publishedAt | readableDate }}</h5>
              <a href="/blog/{{ item.slug }}" class="btn btn-transparent">Read more</a>
              <br>
            </div>
          </article>
        </div>
      {% else %}
        <div class="col-12 text-center">
          <h2 class="font-weight-bold">No articles found.</h2>
        </div>
      {% endfor %}
      {# /articles #}
    </div>
    {# pagination #}
    {% if pagination.hrefs | length > 0 %}
      <ul class="pagination justify-content-center mt-5">
        {% if pagination.previousPageHref %}
          <li class="page-item"><a class="page-link font-weight-bold hover-text-underline text-center text-light-green" href="{{ pagination.previousPageHref }}">Previous Page</a></li>
        {% endif %}
        {% if pagination.nextPageHref %}
          <li class="page-item"><a class="page-link font-weight-bold hover-text-underline text-center text-light-green" href="{{ pagination.nextPageHref }}">Next Page</a></li>
        {% endif %}
      </ul>
    {% endif %}
    {# /pagination #}
  </div>
</section>

<!-- /blog -->

<!-- footer -->
