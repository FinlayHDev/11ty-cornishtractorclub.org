{% set relativePath = '../' if pagination.pageNumber == 0 else '../../' %}

<!DOCTYPE html>

<html lang="en">

<head>
  <meta charset="utf-8">
  <title>Blog | Cornish Tractor Club</title>

  <!-- mobile responsive meta -->
