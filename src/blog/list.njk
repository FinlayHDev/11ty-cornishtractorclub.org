  <meta name="theme-name" content="CTC" />
  <meta name="description" content="Welcome to the Cornish Tractor Club! - We are a tractor club based in Cornwall, organising events throughout the year for our members.">
  <meta name="theme-color" content="#04560e">

  <!-- ** Plugins Needed for the Project ** -->
  <!-- Bootstrap -->
  <link rel="stylesheet" href="{{ relativePath }}plugins/bootstrap/bootstrap.min.css">
  <!-- slick slider -->
